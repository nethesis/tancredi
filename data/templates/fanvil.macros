{% elseif linekey_type == 'prefix' %}
Fkey{{ keyidx }} Type               :3
Fkey{{ keyidx }} Value              :F_PREFIX:{{ linekey_value }}
Fkey{{ keyidx }} Title              :{{ linekey_label | slice(0,10) }}
Fkey{{ keyidx }} ICON               :Green
{% elseif linekey_type == 'recall' %}
